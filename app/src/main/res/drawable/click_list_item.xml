<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <objectAnimator
            android:propertyName="alpha"
            android:duration="50"
            android:valueTo="0.5"
            android:valueType="floatType"/>
    </item>
    <item>
        <objectAnimator
            android:propertyName="alpha"
            android:duration="150"
            android:valueTo="1"
            android:valueType="floatType"/>
    </item>
</selector>